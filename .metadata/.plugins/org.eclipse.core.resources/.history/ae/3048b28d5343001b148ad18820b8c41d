package test.controller;

/**
 * 문제
 * 1~100까지의 모든 정수들의 합과 평균을 구하는 프로그램을 작성한다.
 * 단,while문이나 do while문을 이용하여 작성한다
 * @author kimYS
 *
 */
public class Test3 {

	public static void main(String[] args) {
		int sum=0;
		double avg;
		int i=1;
		while(i<=100) {
			sum += i++;
		}
		avg=sum/100.0;
		System.out.println("합계 : "+sum);
		System.out.println("평균 : "+avg);
	}
}
